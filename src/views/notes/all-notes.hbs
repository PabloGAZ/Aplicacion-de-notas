<div class="row">
    {{#each notes }}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a href="/notes/edit/{{_id}} "> <i class="far fa-edit"></i></a></h4>
            <p> {{description}} </p>
                <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">Borrar</button>    
                </form>
            </div>
        </div>
    </div>
    {{else}}
<div class="card mx-auto">
    <div class="card-body">
    <h2>Hola {{user.name}} </h2>
        <p class="lead" >No hay notas disponibles</p>
        <a href="/notes/add" class="btn btn-success btn-block">Crea una</a>
    </div>
</div>
    {{/each}}
</div>