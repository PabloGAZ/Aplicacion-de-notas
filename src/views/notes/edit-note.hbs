<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Editar nota</h3>
    </div>
    <div class="card-body">
        <form method="POST" action="/notes/edit-note/{{note._id}}?_method=PUT">
        <input type="hidden" name="_method" value="PUT"> 
        <div class="form-group">
            <input value="{{note.title}} " type="text" name="title" id="title" class="form-control" placeholder="Titulo de la nota" >
        </div>
        <div class="form-group">
            <textarea name="description" id="description" class="form-control" placeholder="Descripcion de la nota">{{note.description}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Actualizar nota</button>
        </div>
        </form>
    </div>
</div>
</div>