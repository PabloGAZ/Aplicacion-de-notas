<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nueva nota</h3>
    </div>
    <div class="card-body">
        <form method="POST" action="/notes/new-note">
        <div class="form-group">
            <input type="text" required name="title" id="title" class="form-control" placeholder="Titulo de la nota" autofocus>
        </div>
        <div class="form-group">
            <textarea name="description" required id="description" class="form-control" placeholder="Descripcion de la nota"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Guardar</button>
        </div>
        </form>
    </div>
</div>
</div>